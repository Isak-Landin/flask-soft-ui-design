# True for development, False for production
DEBUG=False

# Flask ENV
FLASK_APP=run.py
FLASK_DEBUG=True

# If not provided, a random one is generated 
# SECRET_KEY=<YOUR_SUPER_KEY_HERE>

# Used for CDN (in production)
# No Slash at the end
ASSETS_ROOT=/static/assets

# If DB credentials (if NOT provided, or wrong values SQLite is used) 
DB_ENGINE=postgresql
DB_HOST=db              # The Docker Compose service name for PostgreSQL
DB_NAME=postgres        # As set in POSTGRES_DB
DB_USERNAME=test        # As set in POSTGRES_USER
DB_PASS=test            # As set in POSTGRES_PASSWORD
DB_PORT=5433            # PostgreSQL's default internal port